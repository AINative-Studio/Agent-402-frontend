# Staging Environment Configuration
# This file is loaded when building with --mode staging

VITE_APP_NAME=Agent402 (Staging)
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=staging

# API Configuration - Staging
# Update this URL to your actual staging API endpoint
VITE_API_BASE_URL=https://staging-api.agent402.com
VITE_API_VERSION_PATH=/v1/public
VITE_API_TIMEOUT=30000

# Feature Flags - Staging
VITE_ENABLE_DEBUG=false
VITE_ENABLE_REACT_QUERY_DEVTOOLS=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true

# Build Configuration - Staging
VITE_ENABLE_PROD_SOURCE_MAPS=true
VITE_DROP_CONSOLE_PROD=false
