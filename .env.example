# ==============================================================================
# Agent-402 Frontend Environment Variables
# ==============================================================================
# Copy this file to .env.local for development or .env.production for production
# All variables prefixed with VITE_ are exposed to the client-side application
# ==============================================================================

# ------------------------------------------------------------------------------
# Application Configuration
# ------------------------------------------------------------------------------

# Application Name
# Used for branding and display purposes
VITE_APP_NAME=Agent402

# Application Version (optional)
# Displayed in UI footer and about section
VITE_APP_VERSION=1.0.0

# Environment Mode
# Options: development, staging, production
# This is typically set automatically by build scripts
VITE_APP_ENV=development

# ------------------------------------------------------------------------------
# API Configuration
# ------------------------------------------------------------------------------

# Backend API Base URL (REQUIRED)
# The base URL for all API requests to the Agent-402 backend
# Development: http://localhost:8000
# Staging: https://staging-api.agent402.com
# Production: https://api.agent402.com
VITE_API_BASE_URL=http://localhost:8000

# API Version Path (optional)
# Appended to API_BASE_URL for versioned API endpoints
# Default: /v1/public
VITE_API_VERSION_PATH=/v1/public

# API Request Timeout (milliseconds)
# Maximum time to wait for API responses before timing out
# Default: 30000 (30 seconds)
VITE_API_TIMEOUT=30000

# API Retry Attempts
# Number of times to retry failed API requests
# Default: 3
VITE_API_RETRY_ATTEMPTS=3

# API Retry Delay (milliseconds)
# Initial delay between retry attempts (uses exponential backoff)
# Default: 1000 (1 second)
VITE_API_RETRY_DELAY=1000

# ------------------------------------------------------------------------------
# Authentication Configuration
# ------------------------------------------------------------------------------

# Default API Key for Development (optional)
# Used for local development when auth is not required
# WARNING: NEVER commit real API keys to version control
# Leave empty in production - users will authenticate via UI
VITE_API_KEY=

# Default Project ID for Development (optional)
# Auto-selects this project on app load during development
# Useful for local testing with a specific project
VITE_PROJECT_ID=

# Session Storage Key
# Key used to store auth tokens in browser storage
# Default: agent402_auth_token
VITE_AUTH_STORAGE_KEY=agent402_auth_token

# Session Expiry Time (milliseconds)
# How long auth sessions remain valid
# Default: 86400000 (24 hours)
VITE_SESSION_EXPIRY=86400000

# ------------------------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------------------------

# Enable Debug Mode
# Shows additional debug information in console and UI
# Default: false (automatically true in development)
VITE_ENABLE_DEBUG=false

# Enable Performance Monitoring
# Tracks performance metrics and logs to console
# Default: false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Enable Analytics
# Enables user analytics tracking (when implemented)
# Default: false
VITE_ENABLE_ANALYTICS=false

# Enable Error Reporting
# Sends errors to external error tracking service (when implemented)
# Default: false
VITE_ENABLE_ERROR_REPORTING=false

# Enable Beta Features
# Shows experimental features in development
# Default: false
VITE_ENABLE_BETA_FEATURES=false

# ------------------------------------------------------------------------------
# UI Configuration
# ------------------------------------------------------------------------------

# Items Per Page
# Default pagination size for list views
# Default: 20
VITE_DEFAULT_PAGE_SIZE=20

# Max File Upload Size (bytes)
# Maximum file size allowed for uploads
# Default: 10485760 (10MB)
VITE_MAX_FILE_UPLOAD_SIZE=10485760

# Refresh Interval (milliseconds)
# Auto-refresh interval for data polling (0 to disable)
# Default: 30000 (30 seconds)
VITE_REFRESH_INTERVAL=30000

# Toast Notification Duration (milliseconds)
# How long success/error messages are displayed
# Default: 5000 (5 seconds)
VITE_TOAST_DURATION=5000

# ------------------------------------------------------------------------------
# Development Configuration
# ------------------------------------------------------------------------------

# Enable Mock Data
# Use mock data instead of real API calls (development only)
# Default: false
VITE_ENABLE_MOCK_DATA=false

# Mock API Delay (milliseconds)
# Simulated network delay for mock API responses
# Default: 500
VITE_MOCK_API_DELAY=500

# Enable React Query Devtools
# Shows React Query devtools panel
# Default: false (automatically true in development)
VITE_ENABLE_REACT_QUERY_DEVTOOLS=false

# ------------------------------------------------------------------------------
# Build Configuration
# ------------------------------------------------------------------------------

# Enable Source Maps in Production
# Generates source maps for production builds (for debugging)
# Default: false (source maps increase bundle size)
VITE_ENABLE_PROD_SOURCE_MAPS=false

# Drop Console Logs in Production
# Removes console.log statements from production bundle
# Default: true (keeps console.warn and console.error)
VITE_DROP_CONSOLE_PROD=true

# Bundle Size Warning Limit (KB)
# Shows warning when chunks exceed this size
# Default: 1000
VITE_CHUNK_SIZE_WARNING_LIMIT=1000

# ------------------------------------------------------------------------------
# External Services (optional - for future integrations)
# ------------------------------------------------------------------------------

# Sentry DSN
# For error tracking and monitoring
VITE_SENTRY_DSN=

# Google Analytics ID
# For usage analytics
VITE_GA_TRACKING_ID=

# PostHog API Key
# For product analytics
VITE_POSTHOG_KEY=

# ------------------------------------------------------------------------------
# Advanced Configuration
# ------------------------------------------------------------------------------

# Custom Base Path
# For deploying to a subdirectory (e.g., /app/)
# Default: / (root)
VITE_BASE_PATH=/

# Public Assets URL
# CDN URL for static assets (leave empty to serve from same domain)
VITE_PUBLIC_ASSETS_URL=

# WebSocket URL
# For real-time features (when implemented)
VITE_WEBSOCKET_URL=

# ==============================================================================
# Environment-Specific Example Configurations
# ==============================================================================

# Development (.env.local):
# VITE_API_BASE_URL=http://localhost:8000
# VITE_ENABLE_DEBUG=true
# VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Staging (.env.staging):
# VITE_APP_ENV=staging
# VITE_API_BASE_URL=https://staging-api.agent402.com
# VITE_ENABLE_ERROR_REPORTING=true

# Production (.env.production):
# VITE_APP_ENV=production
# VITE_API_BASE_URL=https://api.agent402.com
# VITE_ENABLE_ERROR_REPORTING=true
# VITE_ENABLE_ANALYTICS=true
# VITE_DROP_CONSOLE_PROD=true
